    <h3>Example calculation of specific heat capacity</h3>
    <GivenList
      givenList={[
        {
          latex: String.raw`m_{w} = 0.15\:kg`,
        },
        {
          latex: String.raw`c_{w} = 4186 \:kg J\cdot kg^{-1}\cdot K^{-1}`,
        },
        {
          latex: String.raw`\Delta T_{w} = 301.6-291.9 \: K`,
          note: "(room temperature subtracted from measured temperature)",
        },
        {
          latex: String.raw`m_{s} = 0.025 + 0.0005 \: kg`,
          note: "(water mass added to salt mass)",
        },
        {
          latex: String.raw`\Delta T_{s} = 90-28.6 \: K`,
          note: "(measured temperature subtracted from heated temperature)",
        },
      ]}
    />
    <Math
      latex={String.raw`c_{s} = \frac{m_{w} c_{w} \Delta T_{w}}{m_{s} \Delta T_{s}} = \frac{0.15 \cdot 4186 \cdot 9.7}{0.02309 \cdot 61.4}`}
    />
